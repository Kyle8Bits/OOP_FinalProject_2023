         <image>
            <Image url="@../../../BackgroundFX.jpg" />
         </image>
      </ImageView>
      <VBox alignment="TOP_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1000.0">
         <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <Label text="EDIT ACCOUNT" textFill="WHITE" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="Arial Bold" size="70.0" />
                     </font>
                     <effect>
                        <Glow level="1.0" />
                     </effect>
                  </Label>
               </center>
            </BorderPane>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <Label text="Account Type:" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="30.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="typeAccCB" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="420.0" />
               </children>
               <padding>
                  <Insets left="-90.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <Label text="Name:" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameAccountTF" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="420.0">
